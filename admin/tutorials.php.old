<?php
session_start();
require_once '../config/database.php';
require_once '../includes/auth.php';

if (!isLoggedIn() || !isAdmin()) {
    header('Location: ../public/admin-login.php');
    exit;
}

$conn = getDBConnection();

// Tutorial hinzufÃ¼gen
if (isset($_POST['add_tutorial'])) {
    $title = $_POST['title'];
    $description = $_POST['description'];
    $vimeo_url = $_POST['vimeo_url'];
    $category = $_POST['category'];
    $sort_order = (int)$_POST['sort_order'];
    
    $stmt = $conn->prepare("
        INSERT INTO tutorials (title, description, vimeo_url, category, sort_order) 
        VALUES (?, ?, ?, ?, ?)
    ");
    $stmt->execute([$title, $description, $vimeo_url, $category, $sort_order]);
    
    $success = "Tutorial erfolgreich hinzugefÃ¼gt!";
}

// Tutorial lÃ¶schen
if (isset($_POST['delete_tutorial'])) {
    $tutorial_id = (int)$_POST['tutorial_id'];
    $stmt = $conn->prepare("DELETE FROM tutorials WHERE id = ?");
    $stmt->execute([$tutorial_id]);
    
    $success = "Tutorial gelÃ¶scht!";
}

// Alle Tutorials laden
$stmt = $conn->query("SELECT * FROM tutorials ORDER BY category, sort_order");
$tutorials = $stmt->fetchAll(PDO::FETCH_ASSOC);

