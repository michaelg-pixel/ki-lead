# .htaccess für Freebie-Bereich
# Diese Datei gehört in: /htdocs/app.mehr-infos-jetzt.de/freebie/.htaccess

RewriteEngine On
RewriteBase /freebie/

# WICHTIG: PHP-Dateien und Test-Dateien NICHT umleiten
RewriteRule ^(test|debug|index)\.php$ - [L]

# Wenn die Datei oder das Verzeichnis existiert, keine Umleitung
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Leite clean URLs an index.php weiter
# z.B. /freebie/abc123 wird zu /freebie/index.php?id=abc123
RewriteRule ^([a-zA-Z0-9]+)$ index.php?id=$1 [L,QSA]