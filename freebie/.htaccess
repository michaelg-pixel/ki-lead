# .htaccess für Freebie-Bereich
RewriteEngine On
RewriteBase /freebie/

# Schritt 1: Wenn Datei existiert oder Verzeichnis existiert -> STOP
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Schritt 2: Nur für 32-stellige hex IDs (unique_id Format) -> an index.php
RewriteRule ^([a-f0-9]{32})$ index.php?id=$1 [L,QSA]

# Alles andere -> 404 oder durchlassen